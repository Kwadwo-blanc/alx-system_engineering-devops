#!/usr/bin/env bash
# This script displays the time for 12 hours and 59 minutes.

# Initialize hour and minute variables
hour=0
minute=1

# Use a while loop to iterate and display time
while [ $hour -le 12 ]; do
    while [ $minute -le 59 ]; do
        # Format the time and display
        printf "%02d:%02d\n" $hour $minute

        # Increment minute
        ((minute++))

        # Display only the first 70 lines
        if [ $((hour * 60 + minute)) -eq 70 ]; then
            exit
        fi
    done

    # Reset minute and increment hour
    minute=1
    ((hour++))
done
