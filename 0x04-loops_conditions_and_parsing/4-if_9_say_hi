#!/usr/bin/env bash
# This script displays "Best School" 10 times, and on the 9th iteration, it displays "Best School" and "Hi" on a new line.

# Initialize a counter
counter=1

# Use a while loop to repeat the statement until the counter reaches 10
while [ $counter -le 10 ]; do
    # Use an if statement to check for the 9th iteration
    if [ $counter -eq 9 ]; then
        echo -e "Best School\nHi"
    else
        echo "Best School"
    fi
    ((counter++))
done
